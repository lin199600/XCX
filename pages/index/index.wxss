/* pages/index/index.wxss */
/* 轮播图 */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 5个导航栏 */
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}
.navItem text{
  font-size: 26rpx;
}

.navItem .iconfont{
  margin: 20rpx 0;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  background: #777;
  font-size: 44rpx;
  color: #ffffff;
}

/* 推荐歌曲区域 */
.recommendContainer{
  padding: 20rpx;
}
.recommendContainer .header{
  padding-bottom: 20rpx;
}
.recommendContainer .header .title{
  font-size: 28rpx;
  line-height: 80rpx;
  color: #666;
}
.recommendContainer .header .more {
  float: right;
  padding: 10rpx 20rpx;
  border: 1rpx solid #111;
  border-radius: 30rpx;
  font-size: 22rpx;
}
/* 推荐内容区 */
.recommendScroll{
  display: flex;
}
.scrollItem{
  margin-right: 20rpx;
  width: 200rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本隐藏 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本隐藏 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;   /* 设置对齐方式 */
  -webkit-line-clamp: 2;   /* 设置行数 */
}